@model DataObjects.PokemonCard
@{
    AjaxOptions options = new AjaxOptions()
    {
        UpdateTargetId = "modal-body",
        HttpMethod = "GET",
        LoadingElementDuration = 200,
        LoadingElementId = "modal-loading"
    };
}
@using (Ajax.BeginForm("Card", "Browse", null, options, new { @class = "card-form", method = "GET" }))
{
    @Html.Hidden("card", Model.ID)
    <button type="submit" class="card-button" data-bs-toggle="modal" data-bs-target="#modal-popup">
        <div class="card-image" style="background-image: url('/Images/Cards/@Model.ImageName')"></div>
        <h3 class="card-name">@Model.Name</h3>
    </button>
}
