@model DataObjects.User


@Html.Partial("Tab", new PokeBindaWebsite.Models.TabModel()
{
    Action = "Group",
    Controller = "Collection",
    Image = "favorite.png",
    Name = Model.FavoriteGroup.Name,
    RouteValues = new { group = Model.FavoriteGroup.ID }
})

