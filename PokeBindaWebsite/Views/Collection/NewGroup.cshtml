@model PokeBindaWebsite.Models.NewGroupModel
@{
    ViewBag.Title = "New Group";
}

<div class="new-group-container">
    <h2 class="new-group-header">New Group</h2>
    @{
            AjaxOptions options = new AjaxOptions()
            {
                HttpMethod = "Post",
                UpdateTargetId = "tab-container-content",
                OnSuccess = "hideModal",
                LoadingElementId = "modal-loading"
        };
    }
    @using (Ajax.BeginForm("NewGroup", "Collection", options))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name,new { @class = "new-group-textbox" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <button type="submit" class="new-group-create-button">Create</button>
    }
</div>